# 2api.ai Environment Variables
# Copy this to .env and fill in your API keys

# Provider API Keys (at least one required)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Database (optional - for production)
DATABASE_URL=postgresql://user:password@localhost:5432/twoapi

# Redis (optional - for rate limiting)
REDIS_URL=redis://localhost:6379

# Server Config
PORT=8000
MODE=local  # local or prod

# Logging Config
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Observability - OpenTelemetry (optional)
# Set OTEL_EXPORTER_OTLP_ENDPOINT to send traces to a collector
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_CONSOLE_EXPORT=false  # Set to true to print spans to console

# Usage Tracking
USAGE_BUFFER_SIZE=100
USAGE_FLUSH_INTERVAL=5.0
