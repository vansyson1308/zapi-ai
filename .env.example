# 2api.ai Environment Variables
# Copy this file to .env and update values.

# ============================================================
# Provider API Keys (at least one required in local mode)
# ============================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# ============================================================
# Server
# ============================================================
PORT=8000
# Safe default is prod. Set MODE=local explicitly for developer-friendly auth.
MODE=prod
# Optional: enforce production-like guards even in MODE=local (rate limits, safety controls)
STRICT_LOCAL_GUARDS=false

# ============================================================
# Security
# ============================================================
# Required in prod for provider key encryption at rest.
# Generate with: openssl rand -base64 32
FERNET_KEY=

# Comma-separated origin allowlist. Required in prod, wildcard is rejected.
# Example: CORS_ALLOW_ORIGINS=https://app.example.com,https://admin.example.com
CORS_ALLOW_ORIGINS=

# ============================================================
# Database & Cache
# ============================================================
DATABASE_URL=
REDIS_URL=

# ============================================================
# Logging
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================
# Observability (OpenTelemetry)
# ============================================================
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_CONSOLE_EXPORT=false

# ============================================================
# Usage Tracking
# ============================================================
USAGE_BUFFER_SIZE=100
USAGE_FLUSH_INTERVAL=5.0

# Deterministic test-mode quotas (MODE=test)
TEST_RATE_LIMIT_RPM=2
TEST_DAILY_TOKEN_LIMIT=1000000
TEST_MONTHLY_COST_LIMIT=1000
